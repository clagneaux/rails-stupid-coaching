<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>Stupid coaching</h1>
      <div class="question">
        <%= @question %>
        <p><i>- You</i></p>
      </div>
      <div class="answer">
        <strong><%= @answer %></strong>
        <p><i>- Your coach</i></p>
      </div>
      <div class="link">
        <%= link_to "Ask a new question",  ask_path %>
      </div>
    </div>
  </div>
</div>
